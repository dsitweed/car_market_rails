<% provide(:title, "Sign up") %>


<div class="wrapper">
  <h2>Registration</h2>
  <%= form_with(model: @user) do |f| %>
    <div class="input-box">
      <%= f.text_field :name, placeholder: "Enter your name", required: true %>
    </div>
    <div class="input-box">
      <%= f.email_field :email, placeholder: "Enter your email", required: true %>
    </div>
    <div class="input-box">
      <%= f.password_field :password, placeholder: "Create password", required: true %>
    </div>
    <div class="input-box">
      <%= f.password_field :password_confirmation, placeholder: "Confirm password", required: true %>
    </div>
    <div class="policy">
      <%= check_box_tag :terms, "1", false, required: false %>
      <h3>I accept all terms & condition</h3>
    </div>
    <div class="input-box button">
      <%= f.submit "Register Now" %>
    </div>
    <div class="text">
      <h3>Already have an account? <%= link_to "Login now", "#" %></h3>
    </div>
  <% end %>
</div>
