<div class="wrapper">
  <h2><%= yield(:title) %></h2>
  <%= form_with(model: @user) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="input-box">
      <%= f.text_field :name, placeholder: "Enter your name", required: true %>
    </div>
    <div class="input-box">
      <%= f.email_field :email, placeholder: "Enter your email", required: true %>
    </div>
    <div class="input-box">
      <%= f.password_field :password, placeholder: "Create password", required: true %>
    </div>
    <div class="input-box">
      <%= f.password_field :password_confirmation, placeholder: "Confirm password", required: true %>
    </div>
    <div class="input-box button">
      <%= f.submit yield(:button_text) %>
    </div>
  <% end %>
</div>
