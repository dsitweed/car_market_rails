<!-- Sticky header -->
<header class="header-outer">
	<div class="header-inner responsive-wrapper">
		<%= link_to root_path, class: "header-log", id: "logo" do %>
      <%= image_tag "https://assets.codepen.io/285131/acme-2.svg", alt: "logo-imgage"%>
		<% end %>
		<nav class="header-navigation">
			<div class="navbar-header">
				<button id="hamburger" type="button" class="navbar-toggle collapsed">
					<span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
			</div>
			<ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
				<li><%= link_to "Home", root_path %></li>
				<li><%= link_to "About", about_path %></li>
				<li><%= link_to "Help", help_path %></li>
				<li><%= link_to "Blog", "#" %></li>
				<% if logged_in? %>
					<li><%= link_to "Users", users_path %></li>
					<li class="dropdown">
						<a href="#" id="account" class="dropdown-toggle">
							Account <b class="caret"></b>
						</a>
						<ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, data: { "turbo-method": :delete} %>
              </li>
            </ul>
					</li>
				<% else %>
					<%= link_to "Login", login_path %>
					<%= link_to "Sign Up", signup_path %>
				<% end %>
			</ul>
		</nav>
	</div>
</header>

